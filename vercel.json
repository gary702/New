{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "zeroConfig": true }
    }
  ],
  "env": {
    "YOUTRACK_API_URL": "@youtrack_api_url",
    "YOUTRACK_TOKEN": "@youtrack_token"
  },
  "routes": [
    { "src": "/api/tickets", "dest": "/api/tickets.ts" },
    { "src": "/api/document", "dest": "/api/document.ts" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}